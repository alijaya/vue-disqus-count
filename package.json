{
  "name": "vue-disqus-count",
  "description": "Vue Plugin for embedding Disqus comment count.",
  "author": "Ali Jaya Meilio Lie <alijayameilio@gmail.com>",
  "license": "MIT",
  "main": "./src/js/VueDisqusCount.js",
  "files": [
    "dist/*",
    "src/components/*",
    "src/js/*"
  ],
  "repository": "github:alijaya/vue-disqus-count",
  "homepage": "https://alijaya.github.io/vue-disqus-count",
  "bugs": "https://github.com/alijaya/vue-disqus-count/issues",
  "keywords": [
    "vue",
    "plugin",
    "component",
    "embed",
    "disqus",
    "discussion",
    "comment"
